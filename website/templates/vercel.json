{
  "rewrites": [
    { "source": "/api/:path*", "destination": "https://reedse.pythonanywhere.com/api/:path*" },
    { "source": "/login", "destination": "https://reedse.pythonanywhere.com/login" },
    { "source": "/logout", "destination": "https://reedse.pythonanywhere.com/logout" },
    { "source": "/sign-up", "destination": "https://reedse.pythonanywhere.com/sign-up" },
    { "source": "/((?!api|assets|_next|static).*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-Requested-With, Content-Type, Accept, Authorization, Cache-Control, Pragma"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
} 